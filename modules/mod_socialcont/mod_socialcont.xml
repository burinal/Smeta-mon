<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.0"
	client="site"
	method="upgrade">
	<name>SocialCont</name>
	<author>Sergey Pronin</author>
	<creationDate>11.11.2015</creationDate>
	<copyright>Copyright (C) 2012-2013. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>seregin-pro@ya.ru</authorEmail>
	<authorUrl>http://www.seregin-pro.ru</authorUrl>
	<version>2.0.0</version>
	<description>Модуль обратной связи с кнопками социальных сетей с адаптивной версткой</description>
    <files>
        <filename module="mod_socialcont">mod_socialcont.php</filename>
        <filename>mod_socialcont.xml</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
		<folder>tmpl/</folder>
    </files>
	<languages>
		<language tag="ru-RU">language/ru-RU/ru-RU.mod_socialcont.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.mod_socialcont.ini</language>
	</languages>
<config>
	<fields name="params">
		<fieldset name="basic">	
				<field
					name="view_mode"
					type="list"
					default="2"
					label="MOD_SOCIALCONT_VIEW_LABEL"
					description="MOD_SOCIALCONT_VIEW_DESC">
					<option value="0">MOD_SOCIALCONT_VIEW_FORM</option>
					<option value="1">MOD_SOCIALCONT_VIEW_PANEL</option>
					<option value="2">MOD_SOCIALCONT_VIEW_PANEL_AND_FORM</option>
				</field>				
				<field
					name="jquery"
					default="1"
					type="radio"
					label="MOD_SOCIALCONT_LABEL_JQUERY"
					description="MOD_SOCIALCONT_DESC_JQUERY">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>				
			</fieldset>
		    <fieldset name="MOD_SOCIALCONT_FORM_SETTING">
				<field
					name="mail_to"
					type="text"
					label="MOD_SOCIALCONT_EMAIL_TO"
					description="MOD_SOCIALCONT_DESCRIPTION_EMAIL" />
			</fieldset>			
			<fieldset name="MOD_SOCIALCONT_PANEL_SETTING">
				<field
					name="panel_pos"
					type="list"
					default="right"
					label="MOD_SOCIALCONT_LABEL"
					description="MOD_SOCIALCONT_DESC">
					<option value="right">MOD_SOCIALCONT_RIGHT</option>
					<option value="left">MOD_SOCIALCONT_LEFT</option>
				</field>
				<field
					name="opacity_ico"
					type="radio"
					default="0"
					label="MOD_SOCIALCONT_LABEL_OPACITY"
					description="MOD_SOCIALCONT_DESC_OPACITY">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
					name="vk"
					type="text"
					label="MOD_SOCIALCONT_VK"
					description="" />				
				<field
					name="facebook"
					type="text"
					label="MOD_SOCIALCONT_FACEBOOK"
					description="" />				
				<field
					name="twitter"
					type="text"
					label="MOD_SOCIALCONT_TWITTER"
					description="" />					
				<field
					name="odn"
					type="text"
					label="MOD_SOCIALCONT_OK"
					description="" />				
				<field
					name="gp"
					type="text"
					label="MOD_SOCIALCONT_GOOGLE"
					description="" />				
				<field
					name="youtube"
					type="text"
					label="MOD_SOCIALCONT_YOUTUBE"
					description="" />
				<field
					name="instagram"
					type="text"
					label="MOD_SOCIALCONT_INSTAGRAM"
					description="" />					
			</fieldset>
		</fields>
	</config>
</extension>
